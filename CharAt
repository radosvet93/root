/*jshint esversion: 6 */
/* jshint -W097 */
/* jshint -W117 */
'use strict';

function countChar(string, ch) {
    var counted = 0;
    for (let i = 0; i < string.length; i += 1)
        if (string.charAt(i) === ch)
            counted += 1;
    return counted;
}
function countBs(string) {
    return countChar(string, "B");

}

console.log(countBs("BBC"));
console.log(countChar("kakkerlak", "k"));
